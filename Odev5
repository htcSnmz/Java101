import java.awt.*;
import java.util.Scanner;

public class Odev5 {
    public static void main(String[] args) {
        int r;
        double pi = 3.14, cevre, alan;

        Scanner input = new Scanner(System.in);
        System.out.print("Yarıçapı giriniz: ");
        r = input.nextInt();

        cevre = 2 * pi * r;
        alan = pi * r * r;

        System.out.println("Çevre = " + cevre + " Alan = " + alan);
    }
}
